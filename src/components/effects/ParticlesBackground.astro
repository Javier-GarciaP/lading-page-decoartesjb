<div id="particles-container" class="fixed inset-0 pointer-events-none z-0">
    <canvas id="particles-canvas"></canvas>
</div>

<script>
    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia(
        "(prefers-reduced-motion: reduce)",
    ).matches;

    type ParticleType = "circle" | "star" | "heart" | "sparkle" | "flower";

    class ParticleSystem {
        canvas: HTMLCanvasElement;
        ctx: CanvasRenderingContext2D | null = null;
        particles: Particle[] = [];
        mouseX: number = 0;
        mouseY: number = 0;
        width: number = 0;
        height: number = 0;
        animationFrame: number = 0;

        constructor() {
            this.canvas = document.getElementById(
                "particles-canvas",
            ) as HTMLCanvasElement;
            if (!this.canvas || prefersReducedMotion) return;

            this.ctx = this.canvas.getContext("2d", { alpha: true })!;
            this.init();
            this.animate();
            this.handleEvents();
        }

        init() {
            this.resize();
            // Create particles with different types and layers for depth
            const isMobile = window.innerWidth < 768;
            const particleCount = isMobile ? 40 : 80;

            for (let i = 0; i < particleCount; i++) {
                // Mix of particle types
                const types: ParticleType[] = [
                    "circle",
                    "star",
                    "heart",
                    "sparkle",
                    "flower",
                ];
                const type = types[Math.floor(Math.random() * types.length)];
                const layer = Math.floor(Math.random() * 3); // 0, 1, 2 for depth

                this.particles.push(
                    new Particle(this.width, this.height, type, layer),
                );
            }
        }

        resize() {
            this.width = window.innerWidth;
            this.height = window.innerHeight;
            this.canvas.width = this.width;
            this.canvas.height = this.height;
        }

        handleEvents() {
            window.addEventListener("resize", () => {
                this.resize();
                // Reinitialize particles on resize
                this.particles = [];
                this.init();
            });

            window.addEventListener("mousemove", (e) => {
                this.mouseX = e.clientX;
                this.mouseY = e.clientY;
            });

            // Touch support for mobile
            window.addEventListener("touchmove", (e) => {
                if (e.touches.length > 0) {
                    this.mouseX = e.touches[0].clientX;
                    this.mouseY = e.touches[0].clientY;
                }
            });
        }

        animate() {
            if (!this.ctx) return;

            this.ctx.clearRect(0, 0, this.width, this.height);

            // Sort particles by layer for proper depth rendering
            this.particles.sort((a, b) => a.layer - b.layer);

            this.particles.forEach((particle) => {
                particle.update(
                    this.width,
                    this.height,
                    this.mouseX,
                    this.mouseY,
                );
                if (this.ctx) {
                    particle.draw(this.ctx);
                }
            });

            this.animationFrame = requestAnimationFrame(() => this.animate());
        }

        destroy() {
            cancelAnimationFrame(this.animationFrame);
        }
    }

    class Particle {
        x: number;
        y: number;
        size: number;
        speedX: number;
        speedY: number;
        baseAlpha: number;
        alpha: number;
        phase: number;
        type: ParticleType;
        layer: number;
        rotation: number;
        rotationSpeed: number;
        color: string;
        flowerType?: "rose" | "tulip" | "daisy";

        constructor(w: number, h: number, type: ParticleType, layer: number) {
            this.x = Math.random() * w;
            this.y = Math.random() * h;
            this.type = type;
            this.layer = layer;

            // Size varies by layer (closer = bigger)
            const layerSizeMultiplier = 1 + (2 - layer) * 0.3;
            this.size = (Math.random() * 2 + 1) * layerSizeMultiplier;

            // Speed varies by layer (closer = faster for parallax effect)
            const layerSpeedMultiplier = 1 + (2 - layer) * 0.2;
            this.speedX = (Math.random() * 0.6 - 0.3) * layerSpeedMultiplier;
            this.speedY = (Math.random() * 0.6 - 0.3) * layerSpeedMultiplier;

            // Alpha varies by layer (farther = more transparent)
            this.baseAlpha = (Math.random() * 0.3 + 0.2) * (1 - layer * 0.2);
            this.alpha = this.baseAlpha;
            this.phase = Math.random() * Math.PI * 2;

            // Rotation for non-circle shapes
            this.rotation = Math.random() * Math.PI * 2;
            // Slower rotation for flowers for more natural movement
            this.rotationSpeed =
                type === "flower"
                    ? (Math.random() - 0.5) * 0.01
                    : (Math.random() - 0.5) * 0.02;

            // Set flower type if applicable
            if (type === "flower") {
                const flowerTypes: Array<"rose" | "tulip" | "daisy"> = [
                    "rose",
                    "tulip",
                    "daisy",
                ];
                this.flowerType =
                    flowerTypes[Math.floor(Math.random() * flowerTypes.length)];
            }

            // Color variations - gold palette for decorative shapes, natural colors for flowers
            if (type === "flower") {
                const flowerColors = [
                    "rgba(255, 182, 193, ", // Light pink
                    "rgba(216, 191, 216, ", // Lavender
                    "rgba(255, 255, 255, ", // White
                    "rgba(255, 105, 180, ", // Hot pink
                    "rgba(255, 240, 245, ", // Lavender blush
                ];
                this.color =
                    flowerColors[
                        Math.floor(Math.random() * flowerColors.length)
                    ];
            } else {
                const colors = [
                    "rgba(212, 175, 55, ", // Primary gold
                    "rgba(244, 228, 180, ", // Champagne
                    "rgba(255, 215, 0, ", // Bright gold
                    "rgba(218, 165, 32, ", // Goldenrod
                ];
                this.color = colors[Math.floor(Math.random() * colors.length)];
            }
        }

        update(w: number, h: number, mx: number, my: number) {
            this.x += this.speedX;
            this.y += this.speedY;
            this.rotation += this.rotationSpeed;

            // Wrap around screen
            if (this.x > w + 50) this.x = -50;
            else if (this.x < -50) this.x = w + 50;
            if (this.y > h + 50) this.y = -50;
            else if (this.y < -50) this.y = h + 50;

            // Twinkle effect (slower for farther layers)
            this.phase += 0.015 + (2 - this.layer) * 0.005;
            this.alpha =
                this.baseAlpha + Math.sin(this.phase) * this.baseAlpha * 0.5;

            // Mouse interaction (stronger for closer layers)
            const dx = this.x - mx;
            const dy = this.y - my;
            const distance = Math.sqrt(dx * dx + dy * dy);
            const interactionRadius = 120 + this.layer * 30;

            if (distance < interactionRadius && distance > 0) {
                const forceDirectionX = dx / distance;
                const forceDirectionY = dy / distance;
                const force =
                    ((interactionRadius - distance) / interactionRadius) *
                    (3 - this.layer);
                this.x += forceDirectionX * force * 1.5;
                this.y += forceDirectionY * force * 1.5;
            }
        }

        draw(ctx: CanvasRenderingContext2D) {
            ctx.save();
            ctx.globalAlpha = this.alpha;
            ctx.translate(this.x, this.y);
            ctx.rotate(this.rotation);

            switch (this.type) {
                case "circle":
                    this.drawCircle(ctx);
                    break;
                case "star":
                    this.drawStar(ctx);
                    break;
                case "heart":
                    this.drawHeart(ctx);
                    break;
                case "sparkle":
                    this.drawSparkle(ctx);
                    break;
                case "flower":
                    this.drawFlower(ctx);
                    break;
            }

            ctx.restore();
        }

        drawCircle(ctx: CanvasRenderingContext2D) {
            ctx.beginPath();
            ctx.fillStyle = this.color + this.alpha + ")";
            ctx.arc(0, 0, this.size, 0, Math.PI * 2);
            ctx.fill();

            // Add glow
            ctx.shadowBlur = this.size * 2;
            ctx.shadowColor = this.color + this.alpha * 0.5 + ")";
        }

        drawStar(ctx: CanvasRenderingContext2D) {
            const spikes = 5;
            const outerRadius = this.size;
            const innerRadius = this.size * 0.8;

            ctx.beginPath();
            for (let i = 0; i < spikes * 2; i++) {
                const radius = i % 2 === 0 ? outerRadius : innerRadius;
                const angle = (Math.PI / spikes) * i;
                const x = Math.cos(angle) * radius;
                const y = Math.sin(angle) * radius;
                if (i === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            }
            ctx.closePath();
            ctx.fillStyle = this.color + this.alpha + ")";
            ctx.fill();
        }

        drawHeart(ctx: CanvasRenderingContext2D) {
            const size = this.size;
            ctx.beginPath();
            ctx.moveTo(0, size * 0.3);
            ctx.bezierCurveTo(
                -size,
                -size * 0.3,
                -size * 0.5,
                -size,
                0,
                -size * 0.3,
            );
            ctx.bezierCurveTo(
                size * 0.5,
                -size,
                size,
                -size * 0.3,
                0,
                size * 0.3,
            );
            ctx.closePath();
            ctx.fillStyle = this.color + this.alpha + ")";
            ctx.fill();
        }

        drawSparkle(ctx: CanvasRenderingContext2D) {
            const size = this.size;
            ctx.beginPath();
            // Draw a cross/plus shape
            ctx.moveTo(-size, 0);
            ctx.lineTo(size, 0);
            ctx.moveTo(0, -size);
            ctx.lineTo(0, size);

            ctx.strokeStyle = this.color + this.alpha + ")";
            ctx.lineWidth = size * 0.3;
            ctx.lineCap = "round";
            ctx.stroke();

            // Add diagonal lines for sparkle effect
            ctx.beginPath();
            const diag = size * 0.7;
            ctx.moveTo(-diag, -diag);
            ctx.lineTo(diag, diag);
            ctx.moveTo(diag, -diag);
            ctx.lineTo(-diag, diag);
            ctx.stroke();
        }

        drawFlower(ctx: CanvasRenderingContext2D) {
            switch (this.flowerType) {
                case "rose":
                    this.drawRose(ctx);
                    break;
                case "tulip":
                    this.drawTulip(ctx);
                    break;
                case "daisy":
                    this.drawDaisy(ctx);
                    break;
            }
        }

        drawRose(ctx: CanvasRenderingContext2D) {
            const size = this.size;
            // Draw layered petals for rose effect
            for (let layer = 0; layer < 3; layer++) {
                const layerSize = size * (1 - layer * 0.25);
                const petals = 5;

                for (let i = 0; i < petals; i++) {
                    const angle =
                        (Math.PI * 2 * i) / petals + (layer * Math.PI) / petals;
                    ctx.save();
                    ctx.rotate(angle);

                    ctx.beginPath();
                    ctx.ellipse(
                        0,
                        layerSize * 0.5,
                        layerSize * 0.6,
                        layerSize * 0.8,
                        0,
                        0,
                        Math.PI * 2,
                    );
                    ctx.fillStyle =
                        this.color + this.alpha * (0.8 - layer * 0.2) + ")";
                    ctx.fill();

                    ctx.restore();
                }
            }

            // Draw center
            ctx.beginPath();
            ctx.arc(0, 0, size * 0.3, 0, Math.PI * 2);
            ctx.fillStyle = "rgba(255, 223, 0, " + this.alpha * 0.6 + ")";
            ctx.fill();
        }

        drawTulip(ctx: CanvasRenderingContext2D) {
            const size = this.size;
            const petals = 6;

            // Draw tulip petals in a cup shape
            for (let i = 0; i < petals; i++) {
                const angle = (Math.PI * 2 * i) / petals;
                ctx.save();
                ctx.rotate(angle);

                ctx.beginPath();
                ctx.moveTo(0, 0);
                ctx.quadraticCurveTo(size * 0.3, -size * 0.5, 0, -size);
                ctx.quadraticCurveTo(-size * 0.3, -size * 0.5, 0, 0);
                ctx.fillStyle = this.color + this.alpha + ")";
                ctx.fill();

                ctx.restore();
            }
        }

        drawDaisy(ctx: CanvasRenderingContext2D) {
            const size = this.size;
            const petals = 8;

            // Draw daisy petals
            for (let i = 0; i < petals; i++) {
                const angle = (Math.PI * 2 * i) / petals;
                ctx.save();
                ctx.rotate(angle);

                ctx.beginPath();
                ctx.ellipse(
                    0,
                    size * 0.7,
                    size * 0.35,
                    size * 0.6,
                    0,
                    0,
                    Math.PI * 2,
                );
                ctx.fillStyle = this.color + this.alpha + ")";
                ctx.fill();

                ctx.restore();
            }

            // Draw yellow center
            ctx.beginPath();
            ctx.arc(0, 0, size * 0.4, 0, Math.PI * 2);
            ctx.fillStyle = "rgba(255, 215, 0, " + this.alpha + ")";
            ctx.fill();
        }
    }

    // Initialize when DOM is ready
    let particleSystem: ParticleSystem | null = null;

    document.addEventListener("DOMContentLoaded", () => {
        if (!prefersReducedMotion) {
            particleSystem = new ParticleSystem();
        }
    });

    // Cleanup on page unload
    window.addEventListener("beforeunload", () => {
        particleSystem?.destroy();
    });
</script>
