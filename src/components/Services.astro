---
export interface EventCardProps {
  title: string;
  description: string;
  image: string;
}

const props = Astro.props as EventCardProps;
---

<div
  class="bg-white shadow-lg rounded-2xl overflow-hidden max-w-md flex flex-col h-full"
>
  <img src={props.image} alt={props.title} class="w-full h-56 object-cover" />
  <div class="p-6 flex flex-col flex-grow">
    <h2 class="text-xl font-bold text-gray-800">{props.title}</h2>
    <p class="text-gray-600 mt-2 flex-grow">{props.description}</p>
  </div>
</div>
