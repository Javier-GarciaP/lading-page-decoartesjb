---
import Loading from "./Loading.astro";
---

<section class="px-10 py-16 flex justify-center h-[75vh]">
  <div class="presentation grid grid-cols-1 md:grid-cols-2 items-center gap-10 max-w-5xl">
    <!-- Texto -->
    <div>
      <h2 class="font-primary text-5xl mb-6 text-center">¿Quién soy?</h2>
      <p class="text-xl leading-relaxed text-center">
        Soy Jonathan José es un decorador de eventos venezolano residenciado en
        Chile. Me especializo en la creación de ambientes únicos y
        personalizados para celebraciones, combinando creatividad, diseño y
        atención al detalle.
      </p>
    </div>

    <!-- Imagen y Mariposa -->
    <div class="relative flex justify-center pl-15">
      <div class="w-80 h-80 rounded-full bg-primary shadow-lg">
        <img class="w-80 h-80 rounded-full bg-primary shadow-lg" src="/perfil.jpg" alt="Jonathan sonriendo">
      </div>
      <!-- Mariposa -->
      <Loading class="absolute -top-5 right-5 md:-top-10 md:right-10" />
    </div>
  </div>
</section>

<style>
  section {
    position: relative;
  }
  .presentation {
    position: relative;
  }
  .presentation::before {
    content: '';
    position: absolute;
    width: 700px; /* Tamaño del círculo */
    height: 700px; /* Tamaño del círculo */
    background: rgba(48, 206, 171, 0.5); /* Color del círculo (azul con 50% de opacidad) */
    border-radius: 50%; /* Hace que el elemento sea un círculo */
    filter: blur(200px); /* Aplica el efecto de blur */
    z-index: -100; /* Coloca los círculos detrás del contenido */
    top: -400px; /* Ajusta la posición vertical */
    left: -600px;
  }
</style>