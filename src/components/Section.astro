---
const { title: titulo, id } = Astro.props;
const hasTitle = titulo?.trim();
const headingId = hasTitle ? titulo.toLowerCase().replace(/\s+/g, "-") : undefined;
---

<section id={id} class="mb-20" { ...(hasTitle ? { 'aria-labelledby': headingId } : {}) }>
  {hasTitle && (
    <h2 id={headingId} class="text-center text-dark-blue font-title text-m-hn md:text-hn mb-8">
      {titulo}
    </h2>
  )}
  <slot />
</section>