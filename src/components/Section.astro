---
const { title: titulo, id, class: className } = Astro.props;
const hasTitle = titulo?.trim();
const headingId = hasTitle
  ? titulo.toLowerCase().replace(/\s+/g, "-")
  : undefined;
---

<section
  id={id}
  class:list={["py-20 md:py-28 reveal", className]}
  {...hasTitle ? { "aria-labelledby": headingId } : {}}
>
  {
    hasTitle && (
      <h2
        id={headingId}
        class="text-center text-white font-heading text-4xl md:text-5xl lg:text-6xl mb-10 font-bold tracking-tight animate-fade-in-up"
      >
        {titulo}
      </h2>
    )
  }
  <slot />
</section>
