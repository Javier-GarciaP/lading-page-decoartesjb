---
import Layout from "../layouts/Layout.astro";

const galleryEvents = [
  {
    title: "Arreglos Florales",
    description:
      "Diseños únicos con flores frescas para toda ocasión especial, desde cumpleaños hasta aniversarios.",
    image: "/arreglos-florales/imagen-1.jpg",
    route: "/galeria/arreglos-florales"
  },
  {
    title: "Baby Shower",
    description:
      "Decoraciones tiernas y personalizadas para dar la bienvenida al nuevo miembro de la familia.",
    image: "/baby-shower/imagen-1.jpg",
    route: "/galeria/baby-shower"
  },
  {
    title: "Cumpleaños",
    description:
      "Ambientes festivos con estilo y elegancia para celebrar la vida de tus seres queridos.",
    image: "/cumpleaños/imagen-1.jpg",
    route: "/galeria/cumpleaños"
  },
  {
    title: "Eventos Empresariales",
    description:
      "Decoraciones que transmiten profesionalismo y modernidad en reuniones corporativas.",
    image: "/evento-empresarial/imagen-1.jpg",
    route: "/galeria/evento-empresarial"
  },
  {
    title: "Matrimonios",
    description:
      "Cada boda es única y mágica. Explora las diferentes ceremonias y estilos realizados.",
    image: "/matrimonios/matrimonio-1/imagen-1.jpg",
    route: "/galeria/matrimonios"
  }
];
---

<Layout title="Galería de Eventos">
  <section class="px-6 md:px-10 py-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {galleryEvents.map(event => (
      <a href={event.route} class="group block relative rounded-xl overflow-hidden shadow-lg">
        <img
          src={event.image}
          alt={event.title}
          class="w-full h-64 object-cover transform transition duration-300 group-hover:scale-110"
        />
        <div class="absolute inset-0 bg-black/50 flex flex-col justify-end p-4 opacity-0 group-hover:opacity-100 transition">
          <h3 class="text-white text-xl font-bold">{event.title}</h3>
          <p class="text-white text-sm mt-1">{event.description}</p>
        </div>
      </a>
    ))}
  </section>
</Layout>
